{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    // type output
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    // still output when error
    "noEmitOnError": false,
    "allowJs": true
  },
  "exclude": [
    "playground/**/*",
    "dist/**/*",
    "bin/**/*",
  ]
}